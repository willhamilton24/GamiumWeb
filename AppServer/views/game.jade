extends layout

block content


  .game-vertical-ad-left
    img(src="https://placekitten.com/120/600")
  .game-info-cnt
    .contact-ad-mobile
      img.my-2.descb(src="https://placekitten.com/728/90")
    h1.game-title-mobile= gameInfo.name
    .row
      .game-panel-left
        img.gameImg.mx-auto.mb-2(src= gameInfo.img, style='width: 100%;')
        .game-list(ng-app='livePrices' ng-controller='getPrices')
          .offers-header Current Offers
          .game-list-item
            .store-icon-box
              img.store-icon(src='/images/Stores/Steam.png')
            a.store-link(href='https://store.steampowered.com/app/#{gameInfo.id}/') Steam
            a.store-price(href="https://store.steampowered.com/app/#{gameInfo.id}")= steam
          .game-list-item
            .store-icon-box
              img.store-icon(src='/images/Stores/gog.png')
            a.store-link(href='https://www.gog.com/') GOG
            a.store-price(href='https://www.gog.com/') {{ gog }}
          .game-list-item
            .store-icon-box
              img.store-icon(src='/images/Stores/kinguin.png')
            a.store-link(href='https://kinguin.net') Kinguin
            a.store-price(href='https://kinguin.net') {{ kinguin }}
          .game-list-item
            .store-icon-box
              // include these id tags (#lower-X) when there is two lines of text
              img.store-icon#lower-icon(src='/images/Stores/G2A.png')
            a.store-link#lower-link(href='https://www.g2a.com/r/gamium') G2A
            a.store-price#lower-price(href='https://www.g2a.com/r/gamium') {{ g2a }}
          .card-footer(style='font-size: 2vh;') {{ bp }}
        .contact-ad-mobile
          img.my-2.descb(src="https://placekitten.com/728/90")
        .twoSquareAds
          img(src="https://placekitten.com/250/250", width='48%', style='float:left; margin-top:20px; margin-bottom: 20px;')
          img(src="https://placekitten.com/250/250", width='48%', style='float:right; margin-top:20px; margin-bottom: 20px;')
      .game-panel-right
        h1.game-title= gameInfo.name
        .game-dp Developer: #{gameInfo.dev}
        .game-dp Publisher: #{gameInfo.publisher}
        .game-dp Release Date: #{gameInfo.releaseDate}
        br
        h5 Description:
        .gameDescription!= gameInfo.desc
        img.my-2.descb(src="https://placekitten.com/728/90")
        img.my-2.descb(src="https://placekitten.com/728/90")
        img.my-2.descb(src="https://placekitten.com/728/90")
  .game-vertical-ad-right
    img(src="https://placekitten.com/120/600")

