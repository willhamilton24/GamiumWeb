extends layout

block content


  .container.gameInfoCnt(style='margin-top: 3vh;')
    h1.mobileTitle= gameInfo.name
    .row
      .col-lg-6.px-6.col-md-12
        img.gameImg.mx-auto.mb-2(src= gameInfo.img, style='width: 100%;')
        .prices.card.bg-dark.mb-6(ng-app='livePrices' ng-controller='getPrices')
          .card-header(style='font-size:2vh;') Offers
          ul.card-body.list-group-flush.p-0.mb-0(style='list-style-type:none;')
            li.storePrice.list-group-item.bg-dark
              img.storeIcon.steamIcon.pb-2(src='/images/Stores/Steam.png', style='width:5vw;')
              a.storeLink.ml-3.pt-2(href='https://store.steampowered.com/app/#{gameInfo.id}/' style='font-size:3vh;') Steam
              a.price.mt-2(href="https://store.steampowered.com/app/#{gameInfo.id}", style='float:right; font-size:30px;')= steam
            li.storePrice.list-group-item.bg-dark
              img.storeIcon.steamIcon(src='/images/Stores/gog.png', style='width:5vw;')
              a.storeLink.ml-3.mt-2(href='/' style='font-size:3vh;') GOG
              a.price.mt-2(href='/', style='float:right; font-size:30px;') {{ gog }}
            li.storePrice.list-group-item.bg-dark
              img.storeIcon.steamIcon(src='/images/Stores/kinguin.png', style='width:5vw;')
              a.storeLink.ml-3.mt-2(href='http://kinguin.net' style='font-size:3vh;') Kinguin
              a.price.mt-2(href='http://kinguin.net', style='float:right; font-size:30px;') {{ kinguin }}
            li.storePrice.list-group-item.bg-dark
              img.storeIcon.steamIcon.mt-3(src='/images/Stores/G2A.png', style='width:5vw;')
              a.storeLink.ml-3.mt-3(href='/' style='font-size:3vh;') G2A
              a.price.mt-2(href='/', style='float:right; font-size:20px;') {{ g2a }}
          .card-footer(style='font-size: 2vh;') {{ bp }}
        .twoSquareAds.row.mb-4
          img.mt-5.col-sm-6.col-xs-12(src="http://placekitten.com/250/250")
          img.mt-5.col-sm-6.col-xs-12(src="http://placekitten.com/250/250")
      .col-lg-6.px-6.col-md-12
        h1.gameTitle.font-weight-bold.mb-2= gameInfo.name
        h5.gameDP Developer: #{gameInfo.dev}
        h5.gameDP Publisher: #{gameInfo.publisher}
        h5.gameDP Release Date: #{gameInfo.releaseDate}
        br
        h5 Description:
        .gameDescription!= gameInfo.desc
        img.my-2.descb(src="http://placekitten.com/728/90")
        img.my-2.descb(src="http://placekitten.com/728/90")
        img.my-2.descb(src="http://placekitten.com/728/90")

